generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tourist {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  fname    String
  lname    String
  phone    String
  members  Int
  guide    Guide?
  password String
  role     Role     @default(TOURIST)
  ratings  Rating[]
}

model Guide {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  fname        String
  lname        String
  phone        String
  password     String
  availability Availability @default(Available)
  Tourist      Tourist?     @relation(fields: [touristId], references: [id])
  touristId    Int?         @unique
  role         Role         @default(GUIDE)
  ratings      Rating[]
}

model Place {
  id       Int      @id @default(autoincrement())
  name     String
  location String
  ratings  Rating[]
}

model Rating {
  id        Int      @id @default(autoincrement())
  rating    Int      @default(0)
  comment   String?
  tourist   Tourist  @relation(fields: [touristId], references: [id])
  guide     Guide?   @relation(fields: [guideId], references: [id])
  place     Place?   @relation(fields: [placeId], references: [id])
  touristId Int
  guideId   Int?
  placeId   Int?
  createdAt DateTime @default(now())
}

enum Role {
  TOURIST
  GUIDE
}

enum Availability {
  Available
  Unavailable
}
